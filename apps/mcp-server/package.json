{
  "name": "@project-manager/mcp-server",
  "version": "0.0.0",
  "description": "Model Context Protocol server for project-manager AI integration",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "pm-mcp-server": "src/bin/mcp-server-dev.ts"
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx --tsconfig tsconfig.json src/bin/mcp-server-dev.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:",
    "zod": "^3.25.56",
    "@project-manager/infrastructure": "workspace:*",
    "@project-manager/application": "workspace:*",
    "@project-manager/domain": "workspace:*",
    "@project-manager/base": "workspace:*",
    "@project-manager/sdk": "workspace:*"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
      "pm-mcp-server": "dist/bin/mcp-server.js"
    },
    "executableFiles": [
      "dist/bin/mcp-server.js"
    ]
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  }
}
