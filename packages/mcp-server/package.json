    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
      "pm-mcp-server": "dist/bin/mcp-server.js"
    },
    "executableFiles": [
      "dist/bin/mcp-server.js"
    ]
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "inversify": "catalog:",
    "ts-node": "^10.9.2",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
