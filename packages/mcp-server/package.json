{
  "name": "@project-manager/mcp-server",
  "version": "0.0.0",
  "description": "Model Context Protocol server for project-manager AI integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "pm-mcp-server": "src/bin/mcp-server-dev.ts"
  },
  "scripts": {
