{
  "name": "@project-manager/base",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Base package with Shared Kernel and Common Infrastructure patterns",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "@project-manager/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "vitest"
  },
  "dependencies": {
    "dequal": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  }
}
