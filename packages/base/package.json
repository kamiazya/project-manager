{
  "name": "@project-manager/base",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Base package with Shared Kernel and Common Infrastructure patterns",
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./common/logging": {
      "development": "./src/common/logging/index.ts",
      "types": "./dist/common/logging/index.d.ts",
      "import": "./dist/common/logging/index.js"
    }
  },
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./common/logging": {
        "types": "./dist/common/logging/index.d.ts",
        "import": "./dist/common/logging/index.js"
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "vitest"
  },
  "dependencies": {
    "dequal": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:"
  }
}
